{
  "name": "MagicConchShellBot",
  "version": "1.0.0",
  "description": "The Magic Conch Shell Bot is a lavender-colored seashell, and has a speaker inside it to help the toy and users communicate more effectively. It is operated by a pull-string on Reddit.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "NODE_ENV=sandbox node ./app/app.js",
    "lint": "eslint",
    "test": "jest",
    "docs": "jsdoc -c jsdoc.json"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "quotes": [
        "warn",
        "double"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "keyword-spacing": [
        "warn",
        {
          "after": false,
          "before": false
        }
      ],
      "space-before-function-paren": [
        "warn",
        "never"
      ],
      "switch-colon-spacing": [
        "warn",
        {
          "after": true,
          "before": false
        }
      ],
      "eqeqeq": [
        "warn",
        "smart"
      ],
      "handle-callback-err": "warn",
      "no-mixed-requires": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/youkergav/MagicConchShellBot.git"
  },
  "keywords": [
    "Magic",
    "Conch",
    "Shell",
    "API",
    "Reddit"
  ],
  "author": "Gavin Youker, Nathan Perkins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/youkergav/MagicConchShellBot/issues"
  },
  "homepage": "https://github.com/youkergav/MagicConchShellBot#readme",
  "dependencies": {
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "mongoose": "^5.6.5"
  },
  "devDependencies": {
    "dotenv": "^8.0.0",
    "eslint": "^6.0.1",
    "jest": "^24.8.0",
    "jsdoc": "^3.6.3",
    "jsdoc-template": "github:braintree/jsdoc-template#master"
  }
}
